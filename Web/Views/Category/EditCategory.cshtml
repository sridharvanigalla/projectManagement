@model BusinessObject.CategoryObject;
@{
    ViewData["Title"] = "EditCategory";
}

<section class="content">
    <div class="row">
        <div class="col-md-12" style="opacity: 1.0;">
            <div class="box box-primary" style="margin-bottom: 5px!important;border-top: 0px;">
                <div class="col-md-12" style="opacity: 1.0;">
                    <div class="col-md-6">
                        <h3>Edit Category</h3>
                    </div>
                    <div>
                        <a asp-controller="Category" asp-action="CategoryDetails" style="margin-top: 12px;float:right;" class="btn btn-primary">Back to List</a>
                    </div>
                    <div class="clearfix"></div>
                    <hr />
                </div>
                <form asp-action="CreateCategory">
                    <div class="box-body">
                        <div class="form-group col-sm-6">
                            <input type="hidden" asp-for="CategoryId" />
                            <label asp-for="CategoryName" class="control-label"></label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Category" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="pull-left">
                        <button type="submit" class="btn btn-primary">Save</button>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>


</section>

